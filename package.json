{
  "name": "md2slide",
  "version": "0.1.0",
  "private": true,
  "description": "Marp-compatible Markdown slide editor with Google Slides/PDF export",
  "type": "module",
  "scripts": {
    "dev:frontend": "pnpm --filter @md2slide/frontend dev",
    "dev:backend": "pnpm --filter @md2slide/backend dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @md2slide/frontend build",
    "build:backend": "pnpm --filter @md2slide/backend build",
    "build:shared": "pnpm --filter @md2slide/shared build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@next/eslint-plugin-next": "^14.1.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
