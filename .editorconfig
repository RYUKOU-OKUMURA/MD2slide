# EditorConfig - https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[.*rc]
indent_size = 2

[*.{config.js,config.ts}]
indent_size = 2
